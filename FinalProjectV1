using System;
					
public class Program
{
	public static void Main()
	{
		// Initialization
		string userName = " ";
		int dailycalorieGoal = 0;
		int dailywaterGoal = 0;
		
		// USER SETUP, some loop exception would be necessary here to ensure
		// that the user setup only runs once.
		Console.WriteLine("~~~~~~~~~~ Welcome to K&K Calorie Tracker ~~~~~~~~~~ \n");
		Console.WriteLine("Please enter your name: ");
		userName = Console.ReadLine();
		Console.WriteLine("What is your daily caloric intake goal?: ");
		dailycalorieGoal = Convert.ToInt16(Console.ReadLine());
		Console.WriteLine("What is your daily water intake goal in ounces?: ");
		dailywaterGoal = Convert.ToInt16(Console.ReadLine());
		
		
		// MAIN MENU
		
		
		
		
	}
}
